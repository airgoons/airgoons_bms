//////////////////////////////////////////////////////////////////////////////
// #TOTAL_EVENTS is a required entry, and
// should be # of events we have triggers for
// and code fore
// KCK WARNING: KEEP THIS UPDATED!
//////////////////////////////////////////////////////////////////////////////
#TOTAL_EVENTS 17

//////////////////////////////////////////////////////////////////////////////
// #SET_EVENT will set the activated flag for any
// events we want to be initially activate
// ie: Seoul already should be marked as
// captured in the Pusan parameter scenario
//
// This marks that NATO forces are on the defensive
//////////////////////////////////////////////////////////////////////////////
#SET_EVENT 10

//////////////////////////////////////////////////////////////////////////////
// This sets the initial tempo
//////////////////////////////////////////////////////////////////////////////
#SET_TEMPO 15

//////////////////////////////////////////////////////////////////////////////
// This sets the FLOT direction North-South
//////////////////////////////////////////////////////////////////////////////
#FLOT_SORTDIRECTION 0

//////////////////////////////////////////////////////////////////////////////
// Initialization section done
//////////////////////////////////////////////////////////////////////////////
#ENDINIT


//////////////////////////////////////////////////////////////////////////////
// Event #1
// Tirane being attacked by FRY forces
//////////////////////////////////////////////////////////////////////////////
#IF_NOT_EVENT_PLAYED 1
	#IF_CONTROLLED 6 OR 21 2221
		#PLAY_MOVIE 100
		#SET_PAK_PRIORITY 6 21 100
		#SET_PAK_PRIORITY 2 21 100
		#CHANGE_PRIORITIES 6 2
		#CHANGE_PRIORITIES 2 1
		#SET_TEMPO 255
		#DO_EVENT 1
		#DO_MONOLOG Tirane being attacked by FRY forces
	#ENDIF
#ENDIF

